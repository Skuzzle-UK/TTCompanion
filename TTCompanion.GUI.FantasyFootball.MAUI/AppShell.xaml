<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TTCompanion.GUI.FantasyFootball.MAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:TTCompanion.GUI.FantasyFootball.MAUI"
    xmlns:views="clr-namespace:TTCompanion.GUI.FantasyFootball.MAUI.Views"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent
        ContentTemplate="{DataTemplate views:LoadingPage}"
        Route="loading" />
    <ShellContent
        ContentTemplate="{DataTemplate views:LoginPage}"
        Route="login" />
    <ShellContent
        ContentTemplate="{DataTemplate views:MainPage}"
        Route="main" />
    <ShellContent
        ContentTemplate="{DataTemplate views:TeamsPage}"
        Route="teams" />
    <ShellContent
        ContentTemplate="{DataTemplate views:SettingsPage}"
        Route="settings" />

</Shell>
